{
  "displayName": "Homebridge X-Sense",
  "name": "homebridge-x-sense",
  "version": "0.19.0",
  "description": "X-Sense Homebridge Plugin",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "config.schema.json",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cropwell/homebridge-x-sense.git"
  },
  "bugs": {
    "url": "https://github.com/cropwell/homebridge-x-sense/issues"
  },
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && homebridge -D",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "jest --detectOpenHandles --forceExit",
    "test:integration": "ts-node scripts/test-integration.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "keywords": [
    "homebridge-plugin",
    "x-sense"
  ],
  "license": "Apache-2.0",
  "cpu": [
    "arm",
    "x64",
    "arm64"
  ],
  "engines": {
    "node": ">=18",
    "homebridge": ">=1.8.0"
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^6.3.1",
    "aws4": "^1.13.2",
    "axios": "^1.6.2",
    "mqtt": "^5.3.4"
  },
  "devDependencies": {
    "@types/aws4": "^1.11.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.12.12",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "conventional-changelog-cli": "^5.0.0",
    "dotenv": "^16.4.1",
    "eslint": "^8.57.0",
    "homebridge": "^1.8.2",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
