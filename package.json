{
  "name": "homebridge-x-sense",
  "version": "1.0.0",
  "description": "X-Sense Homebridge Plugin",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "config.schema.json",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && homebridge -D",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build && npm test",
    "test": "jest --detectOpenHandles --forceExit",
    "test:integration": "ts-node scripts/test-integration.ts"
  },
  "keywords": [
    "homebridge-plugin",
    "x-sense"
  ],
  "author": "Andrew Trevers",
  "license": "Apache-2.0",
  "cpu": [
    "arm",
    "x64",
    "arm64"
  ],
  "engines": {
    "node": ">=14.18.1",
    "homebridge": ">=1.3.5"
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^6.3.1",
    "axios": "^1.6.2",
    "mqtt": "^5.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^18.17.17",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "dotenv": "^16.4.1",
    "eslint": "^8.50.0",
    "homebridge": "^1.7.0",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
